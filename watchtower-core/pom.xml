    </dependencies>
    
    <build>
    	<plugins>
			<plugin>
			  <groupId>org.springframework.boot</groupId>
			  <artifactId>spring-boot-maven-plugin</artifactId>
			  <configuration>
			  	<mainClass>com.heliosapm.watchtower.Watchtower</mainClass>
			  </configuration>
 			  <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
              </executions>			  			  
			</plugin>
			
    	</plugins>
    </build>
    
